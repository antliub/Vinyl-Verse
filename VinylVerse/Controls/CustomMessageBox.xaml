<Window x:Class="VinylVerse.Controls.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification" 
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent" 
        SizeToContent="WidthAndHeight"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual">
    <Border Background="White" 
            CornerRadius="10" 
            Padding="10" 
            BorderBrush="White" 
            BorderThickness="0" 
            Opacity="0.9">
        <StackPanel>
            <TextBlock x:Name="NotificationText" 
                       Foreground="#130F40"
                       FontFamily="pack://application:,,,/Fonts/#Kanit" FontWeight="Light"
                       FontSize="14" 
                       TextWrapping="Wrap"
                       Margin="5"/>
        </StackPanel>
    </Border>
</Window>